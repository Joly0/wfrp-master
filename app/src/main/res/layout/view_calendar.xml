<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/yearLayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/previousYearRange"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:src="@drawable/ic_caret_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/currentYearRange"
            app:layout_constraintBottom_toBottomOf="@id/currentYearRange"
            app:tint="@color/colorText" />

        <TextView
            android:id="@+id/currentYearRange"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/nextYearRange"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:src="@drawable/ic_caret_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/currentYearRange"
            app:layout_constraintBottom_toBottomOf="@id/currentYearRange"
            app:tint="@color/colorText" />

        <TableLayout
            android:id="@+id/yearTable"
            android:shrinkColumns="1,2,3,4,5"
            android:stretchColumns="1,2,3,4,5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/currentYearRange" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dayLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/previousMonth"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:src="@drawable/ic_caret_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/currentMonthName"
            app:layout_constraintBottom_toBottomOf="@id/currentMonthName"
            app:tint="@color/colorText" />

        <TextView
            android:id="@+id/currentMonthName"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/nextMonth"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:src="@drawable/ic_caret_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/currentMonthName"
            app:layout_constraintBottom_toBottomOf="@id/currentMonthName"
            app:tint="@color/colorText" />

        <Button
            android:id="@+id/standaloneDayButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nextMonth" />

        <TableLayout
            android:id="@+id/dayTable"
            android:shrinkColumns="1,2,3,4,5"
            android:stretchColumns="1,2,3,4,5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/standaloneDayButton" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
