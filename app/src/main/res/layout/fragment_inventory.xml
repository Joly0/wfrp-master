<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundUnderCard"
    tools:context=".ui.character.InventoryFragment">

    <LinearLayout
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingBottom="@dimen/long_ui_bottom_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <cz.muni.fi.rpg.ui.views.MoneyView
            android:id="@+id/characterMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="end"
            android:foreground="?attr/selectableItemBackground" />

        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/compose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView style="@style/CardContainer">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginVertical="16dp"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_character_trappings" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/inventoryRecycler"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/noInventoryItemIcon"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_inventory"
                    app:tint="@color/colorEmptyState" />

                <TextView
                    android:id="@+id/noInventoryItemText"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:textColor="@color/colorEmptyState"
                    android:text="@string/no_inventory_item_prompt" />

                <Button
                    android:id="@+id/addNewInventoryItemButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/title_inventory_add_item" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

