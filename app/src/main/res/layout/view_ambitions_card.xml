<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.views.AmbitionsCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cardTitle"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="@string/label_ambition_short_term" />

        <TextView
            android:id="@+id/shortTermAmbitionNone"
            android:drawableStart="@drawable/ic_none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textStyle="italic"
            android:gravity="center_vertical"
            android:text="@string/note_ambition_not_filled" />

        <TextView
            android:id="@+id/shortTermAmbition"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:background="?android:attr/dividerHorizontal" />

        <TextView
            style="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorText"
            android:layout_marginBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_ambition_long_term" />

        <TextView
            android:id="@+id/longTermAmbitionNone"
            android:drawableStart="@drawable/ic_none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textStyle="italic"
            android:gravity="center_vertical"
            android:text="@string/note_ambition_not_filled" />

        <TextView
            android:id="@+id/longTermAmbition"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content" />
    </LinearLayout>
</merge>