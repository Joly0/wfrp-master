<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundUnderCard"
    android:orientation="vertical"
    tools:context=".ui.character.CharacterStatsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingHorizontal="8dp"
            android:paddingBottom="@dimen/long_ui_bottom_padding"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.helper.widget.Flow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="mainCard,woundsCard,pointsCard,statsCard"
                app:flow_maxElementsWrap="1"
                app:flow_verticalBias="0"
                app:flow_verticalGap="16dp"
                app:flow_wrapMode="aligned"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/mainCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/raceAndCareer"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/xpPoints"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/woundsCard"
                style="@style/CardContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp">

                    <androidx.constraintlayout.helper.widget.Flow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:constraint_referenced_ids="wounds,corruptionPoints,sinPoints"
                        app:flow_horizontalAlign="end"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <cz.muni.fi.rpg.ui.views.CharacterPoint
                        android:id="@+id/wounds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:name="@string/label_wounds" />

                    <cz.muni.fi.rpg.ui.views.CharacterPoint
                        android:id="@+id/corruptionPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:name="Corruption" />

                    <cz.muni.fi.rpg.ui.views.CharacterPoint
                        android:id="@+id/sinPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:name="Sin" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/pointsCard"
                style="@style/CardContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp">

                    <androidx.constraintlayout.helper.widget.Flow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:constraint_referenced_ids="resolvePoints,resiliencePoints,pointsDivider,fortunePoints,fatePoints"
                        app:flow_horizontalStyle="spread"
                        app:flow_wrapMode="chain" />

                    <cz.muni.fi.rpg.ui.views.CharacterPoint
                        android:id="@+id/resolvePoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:name="@string/label_resolve" />

                    <cz.muni.fi.rpg.ui.views.CharacterPoint
                        android:id="@+id/resiliencePoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:name="@string/label_resilience" />

                    <View
                        android:id="@+id/pointsDivider"
                        android:layout_width="20dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <cz.muni.fi.rpg.ui.views.CharacterPoint
                        android:id="@+id/fortunePoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        app:name="@string/label_fortune_points" />

                    <cz.muni.fi.rpg.ui.views.CharacterPoint
                        android:id="@+id/fatePoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        app:name="@string/label_fate_points" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/statsCard"
                style="@style/CardContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp">

                    <androidx.constraintlayout.helper.widget.Flow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:constraint_referenced_ids="weaponSkill,ballisticSkill,strength,toughness,initiative,agility,dexterity,intelligence,willPower,fellowship"
                        app:flow_horizontalStyle="spread"
                        app:flow_maxElementsWrap="5"
                        app:flow_wrapMode="aligned" />

                    <cz.muni.fi.rpg.ui.views.CharacterStat
                        android:id="@+id/initiative"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:statName="INI" />

                    <cz.muni.fi.rpg.ui.views.CharacterStat
                        android:id="@+id/dexterity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:statName="DEX" />


                    <cz.muni.fi.rpg.ui.views.CharacterStat
                        android:id="@+id/weaponSkill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:statName="WS" />

                    <cz.muni.fi.rpg.ui.views.CharacterStat
                        android:id="@+id/ballisticSkill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:statName="BS" />

                    <cz.muni.fi.rpg.ui.views.CharacterStat
                        android:id="@+id/strength"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:statName="STR" />

                    <!-- Third row -->
                    <cz.muni.fi.rpg.ui.views.CharacterStat
                        android:id="@+id/toughness"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:statName="TGH" />

                    <!-- Fourth row -->
                    <cz.muni.fi.rpg.ui.views.CharacterStat
                        android:id="@+id/agility"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="8dp"
                        app:statName="AGL" />

                    <cz.muni.fi.rpg.ui.views.CharacterStat
                        android:id="@+id/intelligence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:statName="INT" />

                    <cz.muni.fi.rpg.ui.views.CharacterStat
                        android:id="@+id/willPower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:statName="WLP" />

                    <cz.muni.fi.rpg.ui.views.CharacterStat
                        android:id="@+id/fellowship"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:statName="FEL" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>