<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="0dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/talentItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="16dp">

        <ImageView
            android:id="@+id/talentIcon"
            style="@style/RecyclerViewItemIcon"
            android:src="@drawable/ic_skills"
            android:contentDescription="@string/talent_icon_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/talentItemTitle"
            style="@style/RecyclerViewItemTitle"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@id/taken"
            app:layout_constraintStart_toEndOf="@id/talentIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/talentItemDescription"
            style="@style/RecyclerViewItemDescription"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toStartOf="@id/taken"
            app:layout_constraintStart_toEndOf="@id/talentIcon"
            app:layout_constraintTop_toBottomOf="@+id/talentItemTitle" />

        <TextView
            android:id="@+id/taken"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:text="+"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="@id/takenValue"
            app:layout_constraintEnd_toStartOf="@id/takenValue"
            app:layout_constraintTop_toTopOf="@id/takenValue"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/takenValue"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/talentIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/talentIcon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>