<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.characterCreation.CharacterInfoFormFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/NameText"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/label_name"
        android:textSize="10pt"/>

    <EditText
        android:id="@+id/NameTextFill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="@string/hint_fill_name"
        android:inputType="text"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RaceText"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/label_race"
        android:textSize="10pt"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/radioButtonRaceHuman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/race_human" />

        <RadioButton
            android:id="@+id/radioButtonRaceHalfling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/race_halfling" />

        <RadioButton
            android:id="@+id/radioButtonRaceElf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/race_elf" />

        <RadioButton
            android:id="@+id/radioButtonRaceDwarf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/race_dwarf" />

        <RadioButton
            android:id="@+id/radioButtonRaceGnome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/race_gnome" />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CareerText"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/label_career"
        android:textSize="10pt"/>

    <EditText
        android:id="@+id/CareerTextFill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="@string/hint_fill_career"
        android:inputType="text"/>
</LinearLayout>