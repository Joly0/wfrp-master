<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="0dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/spellLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="16dp">

        <ImageView
            android:id="@+id/spellIcon"
            style="@style/RecyclerViewItemIcon"
            android:src="@drawable/ic_spells"
            android:contentDescription="@string/inventory_item_icon_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/spellName"
            style="@style/RecyclerViewItemTitle"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toStartOf="@id/castingNumberShortcut"
            app:layout_constraintStart_toEndOf="@id/spellIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/spellEffect"
            style="@style/RecyclerViewItemDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toStartOf="@id/castingNumberShortcut"
            app:layout_constraintStart_toEndOf="@id/spellIcon"
            app:layout_constraintTop_toBottomOf="@+id/spellName" />

        <TextView
            android:id="@+id/castingNumberShortcut"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:text="@string/spell_casting_number_shortcut"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="@id/castingNumber"
            app:layout_constraintEnd_toStartOf="@id/castingNumber"
            app:layout_constraintTop_toTopOf="@id/castingNumber" />

        <TextView
            android:id="@+id/castingNumber"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/spellIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/spellIcon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>