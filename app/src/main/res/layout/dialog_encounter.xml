<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="@dimen/dialogPadding"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progress"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />

    <ScrollView
        android:id="@+id/mainView"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <cz.muni.fi.rpg.ui.views.TextInput
                android:id="@+id/encounterName"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:inputLabel="@string/label_name" />

            <cz.muni.fi.rpg.ui.views.TextInput
                android:id="@+id/encounterDescription"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:minLines="3"
                android:inputType="textMultiLine"
                app:inputLabel="@string/label_description" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
