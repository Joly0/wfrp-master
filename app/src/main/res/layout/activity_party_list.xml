<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".partyList.PartyListActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/partyListRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textview_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/assembleNewParty"
        app:layout_constraintTop_toTopOf="@id/assembleNewParty"
        app:layout_constraintBottom_toBottomOf="@id/assembleNewParty"
        android:layout_marginEnd="@dimen/fabLabelMargin"
        android:text="@string/assembleParty_title"
        android:textColor="@color/colorFabText"
        />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/assembleNewParty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@id/floating_action_button"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="24dp"
        android:clickable="true"
        app:backgroundTint="#ffffff"
        app:pressedTranslationZ="12dp"
        app:srcCompat="@drawable/ic_add_black_24dp"
        android:focusable="true" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="24dp"
        android:clickable="true"
        android:background="@color/colorPrimary"
        app:srcCompat="@drawable/ic_group_add_black_24dp"
        android:focusable="true" />
</androidx.constraintlayout.widget.ConstraintLayout>